<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RegisterUserXamarinApp.MainPage">

    <StackLayout Padding="24">
        <Label 
                   HeightRequest="200" Text="Issue #2" 
                   VerticalTextAlignment="Center" 
                   HorizontalTextAlignment="Center"
                   FontSize="40"
                   FontAttributes="Italic"
                   />
        <Label 
                FontSize="Title" 
                Text="Cadastro de usuário" 
                HorizontalTextAlignment="Center"
                Margin="0, 0, 0, 20" />

        <StackLayout x:Name="stlUserRegister">
            <Entry Placeholder="Primeiro nome" x:Name="entFirstName" Margin="0, 10, 0, 0" />
            <Entry Placeholder="Sobrenome" x:Name="entSurname" Margin="0, 10, 0, 0" />
            <Entry Placeholder="Idade" x:Name="entAge" Keyboard="Numeric" Margin="0, 10, 0, 0" />
            <Button Text="Cadastrar" 
                    x:Name="btRegister" 
                    Clicked="PostUserButton" 
                    BackgroundColor="#00CD96"
                    TextColor="White"
                    CornerRadius="20"
                    Margin="0, 10, 0, 0"
                    />
        </StackLayout>
    </StackLayout>
</ContentPage>